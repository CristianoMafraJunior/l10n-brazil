            <field name="date" position="after">
                <field name="document_type_id" groups="l10n_br_fiscal.group_manager" />
                <field
                    name="fiscal_operation_id"
                    groups="l10n_br_fiscal.group_manager"
                />
            </field>
        </field>
    </record>

</odoo>
